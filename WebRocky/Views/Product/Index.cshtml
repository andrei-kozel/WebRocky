@model IEnumerable<WebRocky.Models.Product> 


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary float-right">Create New Product</a>
        </div>
    </div>
    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.Price</td>
                    <td class="text-center">
                        <div class="w-75 btn-group">
                            <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary">Edit</a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    } else
    {
        <p>No products exists.</p>
    }
</div>
